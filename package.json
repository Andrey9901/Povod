{
    "name": "Povod",
    "version": "1.0.0",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "npm run test:ci", // CI-тест
        "start:ci": "node server.js", // Команда, которая запускает сервер для CI/тестов
        "cy:run": "npx cypress run", // Запускает все тесты Cypress в headless режиме
        "cy:open": "npx cypress open", // Запускает Cypress Test Runner (для локальной разработки)
        "test:ci": "start-server-and-test start:ci http://localhost:3001 cy:run"
        // ^^ Главный скрипт:
        // 1. Выполняет `npm run start:ci`
        // 2. Ждет, пока URL `http://localhost:3001` станет доступен
        // 3. Выполняет `npm run cy:run`
        // 4. Останавливает сервер после завершения `cy:run`
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "dotenv": "^16.4.7",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "express-validator": "^7.2.1",
        "mongoose": "^7.8.6",
        "multer": "^1.4.5-lts.2"
    },
    "devDependencies": {
        "nodemon": "^3.1.9",
        "start-server-and-test": "^2.0.11",
        "cypress": "^14.2.1"
    }
}
